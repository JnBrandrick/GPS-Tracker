<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/MainBackground"
    tools:context=".AcquireHost">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User Name:"
        android:background="@color/Titles"
        android:layout_marginBottom="5dp"
        android:id="@+id/user"
        style="?android:attr/borderlessButtonStyle"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:id="@+id/userEdit"
        android:background="@color/TextEdit"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="5dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Host Name or Address:"
        android:background="@color/Titles"
        android:layout_marginBottom="5dp"
        android:id="@+id/host"
        style="?android:attr/borderlessButtonStyle"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/hostEdit"
        android:background="@color/TextEdit"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="5dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Port Number:"
        android:background="@color/Titles"
        android:id="@+id/port"
        android:layout_marginBottom="5dp"
        style="?android:attr/borderlessButtonStyle"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/portEdit"
        android:background="@color/TextEdit"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="5dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Submit"
        android:background="@color/BadSubmit"
        android:id="@+id/submit"
        android:layout_marginBottom="5dp"
        android:onClick="submitConnection"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Clear All"
        android:background="@color/GoodSubmit"
        android:id="@+id/clear"
        android:layout_marginBottom="5dp"
        android:onClick="clearFields"
        />
</LinearLayout>
