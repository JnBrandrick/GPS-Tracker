<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/MainBackground"
    android:orientation="vertical"
    tools:context="comteam_chimeragps_tracker.httpsgithub.bigbrother.TrackingCentral">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Start Tracking"
            android:background="@drawable/blue_button"
            android:id="@+id/toggleTracking"
            android:layout_marginBottom="10dp"
            android:onClick="toggleTracking" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Change Server"
            android:background="@drawable/blue_button"
            android:id="@+id/changeServer"
            android:layout_marginBottom="10dp"
            android:onClick="changeServer"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="View Website"
            android:background="@drawable/blue_button"
            android:id="@+id/showAll"
            android:layout_marginBottom="10dp"
            android:onClick="showAll"
            />
    </LinearLayout>

</LinearLayout>
